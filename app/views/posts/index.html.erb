


<div class="container">
   <div class="wrapper col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
     <p id="notice"><%= notice %></p>

      <% @posts.each do |post| %>
       <div class="row">
         <table>
           <tr>
             <td><%= profile_img(post.user) %>　</td>
             <td><h6><%= post.user.name %></h6></td>
          </tr>
        </table>
          <h4><strong><%= post.title %></strong></h4>
          <h4><strong><%= post.content %></strong></h4>
          <% if post.image? %>
 　　　　　　<span><%= image_tag(post.image) %></span>
　　　　　　<% end %>
          <p><%= link_to 'New Post', new_post_path %></p>
          <%= link_to 'Show', post_path(post.id) %>,
          <%= link_to 'Edit', edit_post_path(post.id) %>,
          <%= link_to 'Delete', post_path(post.id), method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>
       </div>
      <% end %>
    </div>
 </div>
