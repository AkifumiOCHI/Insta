<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
    <p id="notice"><%= notice %></p>
    <h2>Post</h2>
    <table>
      <tr>
        <td rowspan="4">
        <% if @post.image? %>
　　　　　　 <%= image_tag(@post.image) %>
　　　　　　  <% end %>
        </td>
      </tr>
      <tr>
        <td><%= profile_img(@post.user) %></td>
        <td><h5><%= @post.user.name %></h5></td>
     </tr>
      <tr>
        <td><strong>Title：<%= @post.title %></strong>　</td>
        <td><strong>Content：<%= @post.content %></strong></td>
      </tr>
      <tr>
        <td colspan="2"><%= link_to 'Edit', edit_post_path, class: 'btn btn-warning btn-sm'%></td>
      </tr>
    </table>
    <br>
    <br>

<%= link_to 'Back', posts_path, class: 'btn btn-info btn-sm' %>
